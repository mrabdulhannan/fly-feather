<div class="wblings section-{{ section.id }}-padding">
    <div class="container-fluid">  
            <div class="imgbnr">
                <div class="">
                    {% if section.blocks.size > 0 %}
                    {% for block in section.blocks %}
                    <div class=" marcsatbest">
                        <div class="beffect wbsetbnrr ">
                            {% if block.settings.link != blank %}<a href="{{ block.settings.link }}"
                                title="{{ 'wbcustomlabel.wballtext.banner' | t }}">{% endif%}
                                {% if block.settings.image != blank %}
                                <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt }}"
                                    class="img-fluid mx-auto" width="{{ block.settings.image.width }}"
                                    height="{{ block.settings.image.height }}" />
                                {% else %}
                                <img src="https://dummyimage.com/1920x480/aaa" class="img-fluid mx-auto" alt="banner" width="1920"
                                    height="480" />
                                {% endif %}
                                {% if block.settings.link != blank %}</a>{% endif %}
                        </div>
                        <div class="txtimbnrset">
                            <div>
                                {% if block.settings.storysubtitle != blank %}
                                <h2>{{ block.settings.storysubtitle }}</h2>
                                {% endif %}
                                {% if block.settings.storytitle != blank %}
                                    <p>{{ block.settings.storytitle }}</p>
                                {% endif %}
                                {% if block.settings.link != blank %}
                                    <a href="{{ block.settings.link }}" class="btn btn-primary">{{ block.settings.btntxt }}</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                    {% endif %}
                </div>
            </div>
    </div>
</div>
{%- style -%}
.imgbnr{
    background: {{ section.settings.imgbgclr }};
}
.section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
}
@media screen and (max-width: 991px) {
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
    } 
}
{%- endstyle -%}

{% schema %}
{
"name": "Image Banner",
"class": "spaced-section",
"settings": [
  {
    "type": "header",
    "content": "t:sections.all.padding.section_padding_heading"
  },
  {
    "type": "range",
    "id": "padding_top",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_top",
    "default": 0
  },
  {
    "type": "range",
    "id": "padding_bottom",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_bottom",
    "default": 0
  } 
],
 "blocks": [
    {
      "type": "Image",
      "name": "Image Banner",
      "settings": [ 
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "Size: 1920x480"
        },
        {
            "type": "textarea",
            "id": "storysubtitle",
            "label": "Heading",
            "default": "All the online shopping services available during the holiday season"
        },
        {
            "type": "text",
            "id": "storytitle",
            "label": "Sub Heading",
            "default": "Exclusive service"
        },
        {
            "type": "text",
            "id": "btntxt",
            "label": "Button Label",
            "default": "Discover more"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Banner",
      "category": "Image",
      "blocks": [
        {
            "type": "Image"
        }
      ]
    }
  ]
}
{% endschema %}

