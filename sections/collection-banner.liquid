                                    {% if section.settings.link2 != blank %}<a href="{{ section.settings.link2 }}"
                                        title="{{ 'wbcustomlabel.wballtext.banner' | t }}">{% endif%}
                                        {% if section.settings.image2 != blank %}
                                        <img src="{{ section.settings.image2 | img_url: 'master' }}"
                                            alt="{{ section.settings.image2.alt }}" class="img-fluid mx-auto"
                                            width="{{ section.settings.image2.width }}"
                                            height="{{ section.settings.image2.height }}" />
                                        {% else %}
                                        <img src="https://dummyimage.com/545x265/aaa" class="img-fluid mx-auto"
                                            alt="{{ 'wbcustomlabel.wballtext.banner' | t }}" width="545" height="265" />
                                        {% endif %}
                                        <div class="wbsetbntxt">
                                            <div class="wbdip">
                                                {% if section.settings.storydesc2 != blank %}
                                                    <p>{{ section.settings.storydesc2 }}</p>
                                                {% endif %}

                                                {% if section.settings.storytitle2 != blank %}
                                                    <h4>{{ section.settings.storytitle2 }}</h4>
                                                {% endif %}
                                                
                                                {% if section.settings.showtext2 != blank %}<h3><span
                                                        class="btn btn-primary">{{ section.settings.showtext2 }}</span></h3>
                                                {% endif %}
                                            </div>
                                        </div>
                                        {% if section.settings.link2 != blank %}</a>{% endif %}
                                </div>
                            </div>
                            {% endif %}
                       
                            {% if section.settings.showimage3 %}
                            <div class="cless {% unless section.settings.showimage3 %} {% else %} col-md-12  col-12 homecolbnrin3{% endunless %}">
                                <div class="beffect">
                                    {% if section.settings.link3 != blank %}<a href="{{ section.settings.link3 }}"
                                        title="{{ 'wbcustomlabel.wballtext.banner' | t }}">{% endif%}
                                        {% if section.settings.image3 != blank %}
                                        <img src="{{ section.settings.image3 | img_url: 'master' }}"
                                            alt="{{ section.settings.image3.alt }}" class="img-fluid mx-auto"
                                            width="{{ section.settings.image3.width }}"
                                            height="{{ section.settings.image3.height }}" />
