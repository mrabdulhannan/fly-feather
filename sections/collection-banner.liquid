                                        <img src="https://dummyimage.com/1005x265/aaa" class="img-fluid mx-auto"
                                            alt="{{ 'wbcustomlabel.wballtext.banner' | t }}" width="1005" height="265" />
                                        {% endif %}
                                        <div class="wbsetbntxt">
                                            <div class="wbdip">
                                                {% if section.settings.storydesc3 != blank %}
                                                    <p>{{ section.settings.storydesc3 }}</p>
                                                {% endif %}

                                                {% if section.settings.storytitle3 != blank %}
                                                    <h4>{{ section.settings.storytitle3 }}</h4>
                                                {% endif %}
                                                
                                                {% if section.settings.showtext3 != blank %}<h3><span
                                                        class="btn btn-primary">{{ section.settings.showtext3 }}</span></h3>
                                                {% endif %}
                                            </div>
                                        </div>
                                        {% if section.settings.link3 != blank %}</a>{% endif %}
                                </div>
                            </div>
                            {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


{%- style -%}
.section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
}
@media screen and (max-width: 991px) {
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
    }
} 
.homecolbnr .beffect h3 span.btn-primary{
    background: {{ section.settings.collbg1 }};
    color: {{ section.settings.collbgtxt }};
    border-color: {{ section.settings.collbgborder }};
}
.homecolbnr .beffect h3 span.btn-primary:hover{
    background: {{ section.settings.collbg1hv }};
    border-color: {{ section.settings.collbgborderhv }};
    color: {{ section.settings.collbgtxthv }};
}
{%- endstyle -%}
