<div class="homecolbnr section-{{ section.id }}-padding">
    <div class="">
        <div class="page-width">
            <div class="row rless">
                <div class="col-md-3 col-12 cless service-append"></div>
                <div class="col-md-9 col-12 cless col-ban">
                    <div class="row rless wbprinal">
                            {% if section.settings.showimage1 %}
                            <div class="cless {% unless section.settings.showimage1 %}{% else %} col-md-6 col-sm-6 col-12 homecolbnrin1{% endunless %}">
                                <div class="beffect">
                                    {% if section.settings.link1 != blank %}<a href="{{ section.settings.link1 }}"
                                        title="{{ 'wbcustomlabel.wballtext.banner' | t }}">{% endif%}
                                        {% if section.settings.image1 != blank %}
                                        <img src="{{ section.settings.image1 | img_url: 'master' }}"
                                            alt="{{ section.settings.image1.alt }}" class="img-fluid mx-auto"
                                            width="{{ section.settings.image1.width }}"
                                            height="{{ section.settings.image1.height }}" />
                                        {% else %}
                                        <img src="https://dummyimage.com/545x265/aaa" class="img-fluid mx-auto"
                                            alt="{{ 'wbcustomlabel.wballtext.banner' | t }}" width="545" height="265" />
                                        {% endif %}
                                        <div class="wbsetbntxt">
                                            <div class="wbdip">
                                                {% if section.settings.storydesc1 != blank %}
                                                    <p>{{ section.settings.storydesc1 }}</p>
                                                {% endif %}

                                                {% if section.settings.storytitle1 != blank %}
                                                    <h4>{{ section.settings.storytitle1 }}</h4>
                                                {% endif %}
                                                
                                                {% if section.settings.showtext1 != blank %}<h3><span
                                                        class="btn btn-primary">{{ section.settings.showtext1 }}</span></h3>
                                                {% endif %}
                                            </div>
                                        </div>
                                        {% if section.settings.link1 != blank %}</a>{% endif %}
                                </div>
                            </div>
                            {% endif %}

                            {% if section.settings.showimage2 %}
                            <div class="cless {% unless section.settings.showimage2 %} {% else %} col-md-6 col-sm-6 col-12 homecolbnrin2{% endunless %}">
